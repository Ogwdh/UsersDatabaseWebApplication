
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/AuthorizationLayout.cshtml";
}

@model UserDatabaseWebApp.Models.User

<div class="row min-h-100">
    <div class="col-md-6 d-flex align-items-center justify-content-center">
        <section class="w-100 p-3 p-md-4 p-xl-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-xl-10">
                        <div class="card border border-light-subtle rounded-4">
                            <div class="card-body p-3 p-md-4 p-xl-5">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="mb-4">
                                            <h2 class="mb-3">Sign In</h2>
                                        </div>
                                    </div>
                                </div>
                                @if (TempData["AlertMessage"] != null)
                                {
                                    <div class="alert alert-danger">
                                        @TempData["AlertMessage"]
                                    </div>
                                }

                            <form asp-controller="Users" asp-action="Login" method="post">
                                @Html.AntiForgeryToken()
                                @using (Html.BeginForm("Login", "Users", FormMethod.Post))
                                {
                                    <div class="col-12 mt-3">
                                        <div class="d-grid">
                                            <label for="InputEmail" class="form-label">Email address</label>
                                            <input type="email" class="form-control" id="InputEmail" name="Email" aria-describedby="emailHelp">
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <div class="d-grid">
                                            <label for="InputPassword" class="form-label">Password</label>
                                            <input type="password" class="form-control" id="InputPassword" name="Password">
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <div class="mb-3 form-check">
                                            <input type="checkbox" class="form-check-input" id="Check" name="RememberMe">
                                            <label class="form-check-label" for="Check">Remember me</label>
                                        </div>
                                    </div>

                                    <div class="col-12 mt-3">
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary">Sign In</button>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <p class="text-center mb-0">Don't have an account? <a href="@Url.Action("SignUp", "Users")">Sign up</a></p>
                                    </div>
                                }
                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-6 d-flex align-items-center justify-content-center">
        <img src="https://cdn.pixabay.com/photo/2020/01/26/20/14/computer-4795762_1280.jpg" class="img-fluid" alt="Responsive image">
    </div>
</div>


